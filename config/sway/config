# Mod key
set $mod Mod4

# Font
font pango:JetBrainsMono Nerd Font Bold 11

### --- Audio and Media Keys ---
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop

floating_modifier $mod

### --- Autostart Programs (Wayland-only) ---
exec mako                                # notifications (Wayland replacement for dunst)
exec wl-paste --watch clipman store      # clipboard manager
exec nm-applet --indicator               # works under Wayland
exec blueman-applet
exec wlsunset -l 42.5 -L 27.4            # replace redshift (use your coords)
exec swaybg -i ~/Projects/dotfiles/images/cottages-river.png -m fill
exec ~/Projects/dotfiles/scripts/keyboard.sh
exec kanshi                             # display profiles (optional)

# If you used picom, it's not needed; sway handles its own compositing.

### --- Launchers and Apps ---
bindsym $mod+Return exec foot
bindsym $mod+n exec makoctl dismiss -a
bindsym $mod+q kill
bindsym $mod+d exec wofi --show drun --prompt "Run:" --allow-images

bindsym $mod+b exec brave
bindsym $mod+Shift+f exec foot -e ranger
bindsym $mod+Shift+v exec clipman pick --tool=wtype
bindsym $mod+p exec grim -g "$(slurp)" ~/Pictures/screenshot-$(date +'%Y%m%d-%H%M%S').png
bindsym $mod+Shift+p exec ~/Projects/dotfiles/scripts/passmenu
bindsym $mod+x exec ~/Projects/dotfiles/scripts/locker

### --- Window Controls ---https://google.com/
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left 20px
bindsym $mod+Shift+j move down 20px
bindsym $mod+Shift+k move up 20px
bindsym $mod+Shift+l move right 20px

bindsym $mod+c split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+s sticky toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+Tab workspace back_and_forth

### --- Workspaces ---
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch / move workspaces
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

### --- Reload / Restart / Exit ---
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r exec swaymsg reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit Sway?' -b 'Yes' 'swaymsg exit'

### --- Floating Rules ---
for_window [app_id="mpv|imv"] floating enable move position center
for_window [app_id="scratchpad"] floating enable
for_window [app_id="scratchpad"] resize set 1024 768
for_window [app_id="scratchpad"] move scratchpad
for_window [app_id="scratchpad"] border pixel 5
exec foot -a scratchpad

bindsym $mod+Shift+Return [app_id="scratchpad"] scratchpad show; [app_id="scratchpad"] move position center

### --- Resize Mode ---
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Caps_Lock mode "default"
    bindsym $mod+r mode "default"
}

### --- Move Mode ---
bindsym $mod+m mode "move" focus floating
mode "move" {
    bindsym Left  move left
    bindsym Down  move down
    bindsym Up    move up
    bindsym Right move right
    bindsym h move left
    bindsym j move down
    bindsym k move up
    bindsym l move right
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### --- Gaps (built-in in Sway) ---
set $gaps_change 5
gaps inner 5
gaps outer 5

### --- Colors (Catppuccin-inspired) ---
set $rosewater #f5e0dc
set $lavender  #b4befe
set $overlay0  #6c7086
set $base      #1e1e2e
set $text      #cdd6f4
set $red       #f38ba8
set $mauve     #cba6f7
set $surface2  #585b70

client.focused           $lavender $base $text  $rosewater $lavender
client.focused_inactive  $overlay0 $base $text  $rosewater $overlay0
client.unfocused         $overlay0 $base $text  $rosewater $overlay0
client.urgent            $red      $base $red   $overlay0  $red
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

### --- Waybar ---
bar {
    swaybar_command waybar
}

